# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/orchestra_planner

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM Providers (Cloud) - Use your actual keys in .env, not these placeholders
ANTHROPIC_API_KEY=sk-ant-<your-actual-key-here>
OPENAI_API_KEY=sk-<your-actual-key-here>
GENERIC_OPENAI_API_KEY=<your-actual-key-here>
GENERIC_OPENAI_BASE_URL=https://api.example.com/v1

# Local Model Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Model Routing Configuration
MODEL_ROUTING_MODE=local-preferred  # local-only | local-preferred | balanced | performance

# Budget Configuration (USD)
DAILY_BUDGET_LIMIT=10.0
MONTHLY_BUDGET_LIMIT=150.0

# MCP GitHub Integration - Use GitHub App instead of personal tokens
GITHUB_TOKEN=ghp_<replace-with-github-app-token>
GITHUB_REPO_OWNER=stackconsult
GITHUB_REPO_NAME=Agent-orchestra-planner

# Security - Generate with: openssl rand -base64 32
SECRET_KEY=<generate-with-openssl-rand-base64-32>
JWT_SECRET_KEY=<generate-with-openssl-rand-base64-32>

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
DRY_RUN_MODE=false

# Observability
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# Rate Limits
MAX_DESIGN_ITERATIONS_PER_HOUR=50
MAX_IMPLEMENTATIONS_PER_DAY=10
MAX_CONCURRENT_OPERATIONS=3

# Cost Tracking
MONTHLY_BUDGET_LIMIT=150
COST_ALERT_THRESHOLD=0.8
